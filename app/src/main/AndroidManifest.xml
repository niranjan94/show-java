<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.njlabs.showjava">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.njlabs.showjava.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppBaseTheme"
        tools:replace="android:icon, android:allowBackup">

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="37243dbea20e385bdebdc999bef0715ef594e382" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <activity
            android:name=".ui.Landing"
            android:label="@string/title_activity_landing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AppListing"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Landing" />
        </activity>
        <activity
            android:name=".ui.AppProcessActivity"
            android:label="@string/title_activity_app_process"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.AppListing" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="application/vnd.android.package-archive" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.JavaExplorer"
            android:label="@string/title_activity_java_explorer"/>
        <activity
            android:name=".ui.SourceViewer"
            android:label="@string/title_activity_source_viewer"
            android:theme="@style/SourceViewerTheme"/>

        <activity
            android:name=".ui.ImageResourceViewer"
            android:label="@string/title_activity_image_resource_viewer"
            android:theme="@style/SourceViewerTheme"/>

        <activity
            android:name=".ui.About"
            android:label="@string/title_activity_about"/>

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"/>

        <activity
            android:name=".ui.FilePicker"
            android:label="@string/app_name"
            android:theme="@style/FilePickerTheme"/>

        <service
            android:name=".processor.ProcessService"
            android:exported="false"
            android:process=":service" />

        <activity
            android:name=".ui.ErrorActivity"
            android:label="@string/title_activity_error"/>

        <activity
            android:name=".ui.PurchaseActivity"
            android:label="@string/title_activity_purchase"/>


    </application>

</manifest>
